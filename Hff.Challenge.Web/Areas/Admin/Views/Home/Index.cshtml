@{
}
@model List<ProductListDto>
<table class="table table-hover table-bordered">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Kategori</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@item.Category.Name</td>
            <td><a asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-primary">Güncelle</a></td>




        </tr>
    }
</table>
<a asp-action="AddProduct" class="btn btn-primary">Ürün Ekle</a>