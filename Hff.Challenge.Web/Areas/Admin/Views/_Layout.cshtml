<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home" asp-area="Admin">Challenge Admin Panel</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a asp-action="Index" asp-controller="Home" asp-area="Admin">Ürünler</a></li>
                <li><a asp-action="Index" asp-controller="Category">Kategoriler</a></li>
                <li><a asp-action="SignIn" asp-controller="Auth">Admin Giriş</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

</body>
</html>
